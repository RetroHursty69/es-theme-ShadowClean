<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>4</zIndex>	      
        <type>vertical</type>
        <pos>-0.31 0.0</pos>
        <size>1 1</size>
        <logoScale>1.1</logoScale>
        <logoSize>0.29 0.29</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>
		<logoAlignment>center</logoAlignment>        
      </carousel> 
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/main.png</path>
      </image>  	  
      <text name="systemInfo">     
         <pos>0.4 0.01</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>122063</color>
         <fontPath>./_inc/fonts/ClubbedToLife-aemJ.ttf</fontPath>
	     <fontSize>0.03</fontSize>
         <zIndex>6</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system,">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/ClubbedToLife-aemJ.ttf</fontPath>
         <fontSize>0.035</fontSize>     
         <pos>1.19 0.935</pos>      
         <textColor>f700e8</textColor>
         <iconColor>f700e8</iconColor>
      </helpsystem>
   </view>  
  
   <view name="basic,detailed,video">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/ClubbedToLife-aemJ.ttf</fontPath>
         <fontSize>0.03</fontSize>     
         <pos>1.14 0.959</pos>      
         <textColor>f700e8</textColor>
         <iconColor>f700e8</iconColor>
      </helpsystem>
   </view> 
  
<!--
System Gamelist
--> 

   <view name="detailed,video">
      <textlist name="gamelist">
         <zIndex>6</zIndex>	      
         <selectorColor>1c1c1c00</selectorColor> 
	     <selectedColor>0617EF</selectedColor>     
         <pos>0.02 0.17</pos>
         <size>0.35 0.8</size>
         <primaryColor>1B1B1B</primaryColor>
         <secondaryColor>04A000</secondaryColor>
         <fontPath>./_inc/fonts/ClubbedToLife-aemJ.ttf</fontPath>
         <fontSize>0.037</fontSize>
         <forceUppercase>1</forceUppercase>
		 <lineSpacing>1</lineSpacing>
         <scrollSound></scrollSound>
         <alignment>left</alignment>      
      </textlist>
   </view>   
    
   <view name="basic">
      <textlist name="gamelist">
         <zIndex>6</zIndex>	      
         <selectorColor>1c1c1c00</selectorColor> 
	     <selectedColor>0617EF</selectedColor>     
